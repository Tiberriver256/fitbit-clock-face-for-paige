<svg viewport-fill="#15B9ED" fill="white">
  <image href="snowing/snowman.png" width="250" height="250" x="140" y="115" />
  <text text-length="10" class="uppercase h5" x="29" y="51" id="date">---</text>
  <text class="h1" x="29" y="119" id="time">12:58</text>

  <!-- Steps -->
  <image class="fb-aqua" href="steps_36px.png" width="24" height="24" x="29" y="152" />
  <text text-length="10" class="h4" x="78" y="172" id="steps">---</text>

  <!-- Calories -->
  <image class="fb-peach" href="calories_36px.png" width="24" height="24" x="29" y="190" />
  <text text-length="10" class="h4" x="78" y="210" id="calories">---</text>

  <!-- Heart Rate -->
  <image class="fb-red" href="heart_rate_36px.png" width="24" height="24" x="29" y="228" />
  <text text-length="10" class="h4" x="78" y="248" id="heart-rate">---</text>

  <!-- Weather -->
  <image class="fb-white" href="weather/thermometer.gray.png" width="24" height="24" x="29" y="266" />
  <text text-length="10" class="h4" x="78" y="286" id="weather">---</text>

  <!-- Snowing affect -->
  <defs>
    <symbol id="snowflake">
